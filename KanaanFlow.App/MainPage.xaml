<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="KanaanFlow.App.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="KanaanFlow">

    <VerticalStackLayout Spacing="12" Padding="16">

        <Label Text="KanaanFlow" FontSize="28" FontAttributes="Bold" />

        <HorizontalStackLayout Spacing="10">
            <Button Text="Add sample" Command="{Binding AddSampleCommand}" />
            <Button Text="Refresh" Command="{Binding RefreshCommand}" />
        </HorizontalStackLayout>

        <CollectionView ItemsSource="{Binding Notes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeThickness="1" Padding="12" Margin="0,6">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding Title}" FontAttributes="Bold" />
                            <Label Text="{Binding CreatedUtc}" FontSize="12" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
